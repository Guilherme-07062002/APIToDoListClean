{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "./jest.config.js"],
  "exclude": ["node_modules"]
}
